{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2017"],
    "declaration": false,
    "removeComments": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "scripts/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
